{%- comment -%}
  This is a required section for the Shopify Theme Store.
  It is available in the "Featured Collection" section in the theme editor.

  Theme Store required settings
  - Collection

  Theme Store optional settings
  - Heading: title of the featured collection section
{%- endcomment -%}
<section class="featured-collection">
  <div class="wrapper" style="background: linear-gradient(90deg, {{section.settings.featured_collection_left_bg_color}} 50%, {{section.settings.featured_collection_right_bg_color}} 50%);">
    {%- assign collection = collections[section.settings.collection] -%}
    
    <img class="featured-collection__image" src="{{ collection.image | img_url: "500x" }}" alt="{{ collection.image.alt }}">
    <h2 class="featured-collection__subheading">{{ collection.title }}</h2>
    <a class="featured-collection__link" href="{{ collection.url }}" style="background: {{section.settings.featured_collection_link_bg_color}}; box-shadow: 5px 5px {{section.settings.featured_collection_link_bs_color}}; color: {{section.settings.featured_collection_link_text_color}};">learn more</a>
  </div>

</section>

{% schema %}
  {
    "name": "Featured collection",
    "settings": [
      {
        "id": "collection",
        "type": "collection",
        "label": "Collection"
      },
      {
        "type": "header",
        "content": "Featured Collection Color Settings"
      },
      {
        "type": "paragraph",
        "content": "Choose colors for featured collection"
      },
      {
        "type": "color",
        "id": "featured_collection_left_bg_color",
        "label": "Featured Collection Left Background Color",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "featured_collection_right_bg_color",
        "label": "Featured Collection Right Background Color",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "featured_collection_link_bg_color",
        "label": "Featured Collection Link Background Color",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "featured_collection_link_text_color",
        "label": "Featured Collection Link Text Color",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "featured_collection_link_bs_color",
        "label": "Featured Collection Link Boxshadow Color",
        "default": "#fff"
      }
    ],
    "presets": [
      {
        "name": "Featured collection",
        "category": "Collection"
      }
    ]
  }
{% endschema %}
