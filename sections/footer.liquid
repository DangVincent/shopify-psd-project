<footer class="footer">
  <div class="wrapper">
    <img class="footer__image" src="{{section.settings.footer_logo | img_url: "200x"}}" alt="{{section.settings.footer_logo.alt}}">
      <div class="footer__textContainer">
        {% for block in section.blocks %}
          
          {% if block.type == "text" %}
            <a class="footer__link" href="{{block.settings.social_link}}" target="_blank">{{block.settings.social_icon}}</a>
          {% endif %}
      
          {% if block.type == "textarea" %}
            <p class="footer__text">{{block.settings.follow_text}}</p>
          {% endif %}
      
        {% endfor %}
      </div>
  </div>
</footer>
  
  {% schema %}
    {
      "name": "Footer",
      "settings": [
        {
          "type": "image_picker",
          "id": "footer_logo",
          "label": "Footer Logo"
        }
      ],
      "blocks": [
        {
          "type": "text",
          "name": "Social Link",
          "settings": [
            {
              "type": "text",
              "id": "social_icon",
              "label": "Social Icon"
            },
            {
              "type": "url",
              "id": "social_link",
              "label": "Social Link"
            }
          ]
        },
        {
          "type": "textarea",
          "name": "Follow Text",
          "settings": [
            {
              "type": "text",
              "id": "follow_text",
              "label": "Follow Text"
            }
          ]
        }
      ]
    }
  {% endschema %}
  