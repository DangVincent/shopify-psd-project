<section class="imgRight-ctnLeft">
    <div class="wrapper" style="background: {{section.settings.img_right_ctn_left_bg_color}}">
        <img class="imgRight-ctnLeft__image" src="{{section.settings.image_right | img_url: "375x"}}"
            alt="{{section.settings.image_right.alt}}">
        <div class="imgRight-ctnLeft__textContainer">
            {% for block in section.blocks %}
                {% if block.type == "text" %}
                    <h3 
                        class="imgRight-ctnLeft__subheading" 
                        style="background: {{section.settings.img_right_ctn_left_subheading_bg_color}}; color: {{section.settings.img_right_ctn_left_subheading_text_color}}"
                    >
                        {{block.settings.content_left_subheading}}
                    </h3>
                    <h2 class="imgRight-ctnLeft__heading">{{block.settings.content_left_header}}</h2>
                    <p class="imgRight-ctnLeft__text">{{block.settings.content_left_description}}</p>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</section>

{% schema %}
    {
        "name": "Image Right, Content Left",
        "settings": [
            {
                "type": "image_picker",
                "id": "image_right",
                "label": "Image"
            },
            {
                "type": "header",
                "content": "Image Right, Content Left Color Settings"
            },
            {
                "type": "paragraph",
                "content": "Choose colors for this section"
            },
            {
                "type": "color",
                "id": "img_right_ctn_left_bg_color",
                "label": "Image Left, Content Right Background Color",
                "default": "#fff"
            },
            {
                "type": "color",
                "id": "img_right_ctn_left_subheading_bg_color",
                "label": "Subheading Background Color",
                "default": "#fff"
            },
            {
                "type": "color",
                "id": "img_right_ctn_left_subheading_text_color",
                "label": "Subheading Text Color",
                "default": "#fff"
            }
        ],
        "blocks": [
            {
                "type": "text",
                "name": "Content",
                "settings": [
                    {
                        "type": "text",
                        "id": "content_left_header",
                        "label": "Header"
                    },
                    {
                        "type": "text",
                        "id": "content_left_subheading",
                        "label": "Subheading"
                    },
                    {
                        "type": "textarea",
                        "id": "content_left_description",
                        "label": "Description"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Image right, Content left",
                "category": "Blog"
            }
        ]
    }
{% endschema %}