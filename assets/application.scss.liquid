    .cart__link,
    .cart__text {
        text-transform: capitalize;
    }
    .cart__tr {
        border-bottom: 1px solid #000;
    }
    .cart__th {
        height: 50px;
    }
    .cart__td {
        text-align: center;
        &:nth-child(2) .cart__link {
            display: inline-block;
        }
        &:nth-child(2) .cart__link:nth-child(2) {
            margin-top: 5px;
            color:#ff0000;
        }
    }
    .cart__input {
        width: 40%;
        border: none;
        padding: 10px 10px;
        color: {{settings.cart_quantity_text_color}};
        background: {{settings.cart_quantity_bg_color}};
    }
    .cart__buttonContainer {
        .cart__text {
            text-align: right;
        }
    }
    .cart__submit {
        padding: 10px 35px;
        display: inline-block;
        font-family: {{header_font.family}}, {{header_font.fallback_families}};
        letter-spacing: 2px;
        border: none;
        text-transform: uppercase;
        &:nth-child(2) {
            background: {{settings.cart_submit_btn_bg_color_1}};
            color: {{settings.cart_submit_btn_text_color_1}};
            &:hover {
                color: {{settings.cart_submit_btn_hover_color_1}};
            }
        }
        &:nth-child(3) {
            background: {{settings.cart_submit_btn_bg_color_2}};
            color: {{settings.cart_submit_btn_text_color_2}};
            &:hover {
                color: {{settings.cart_submit_btn_hover_color_2}};
            }
        }
    }
}
