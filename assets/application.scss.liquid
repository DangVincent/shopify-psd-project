{% comment %} Header Styles Starts Here {% endcomment %}
.header {
    .header__heading {
        margin: 0;
    }
    .header__linkList {
        padding-top: 50px;
        margin: 0 0 25px;
        display: flex;
        justify-content: space-between;
    }
    .header__collectionLinkList {
        display: none;
        position: absolute;
        .header__collectionItem {
            padding: 10px 0;
            text-align: center;
            border: 1px solid #000;
            border-top: none;
        }
    }
    .header__linkItem {
        position: relative;
    }
    .header__linkItem:nth-child(1) {
        &:hover {
            .header__collectionLinkList {
                display: block;
                background: #fff;
            }
        } 
    }
    .header__linkItem:nth-child(1),
    .header__linkItem:nth-child(3),
    .header__linkItem:nth-child(4) {
        padding-top: 20px;
    } 
    .header__link {
        color: {{settings.header_link_color}};
        text-transform: uppercase;
        &:hover {
            color: {{settings.header_link_hover_color}};
        } 
        .header__innerLink {
            padding-left: 5px;
        }
    }
}
