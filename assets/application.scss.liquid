{% comment %} Collection List Section Styles Starts Here {% endcomment %}
.collection-list {
    margin: 25px 0;
    .wrapper {
        display: flex;
        justify-content: space-between;
    }
    .collection {
        position: relative;
        width: 48%;
        &:nth-child(1) {
            .collection__link {
                background: {{settings.collection_link_bg_color_1}};
                color: {{settings.collection_link_text_color_1}};
                box-shadow: 5px 5px {{settings.collection_link_bs_color_1}};
            }
        }
        &:nth-child(2) {
            .collection__link {
                background: {{settings.collection_link_bg_color_2}};
                color: {{settings.collection_link_text_color_2}};
                box-shadow: 5px 5px {{settings.collection_link_bs_color_2}};
            }
        }
        .collection__image {
            width: 100%;
        }
        .collection__textContainer {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-transform: uppercase;
        }
        .collection__subheading {
            text-align: center;
            margin-bottom: 20px;
            padding: 0 20%;
            font-size: 2.4rem;
            z-index: 10;
        }
        .collection__link {
            padding: 10px 15px;
            letter-spacing: 2px;
        }
    }
}
