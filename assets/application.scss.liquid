.cart {
    .cart__heading {
        text-align: center;
        text-transform: uppercase;
        width: 100%;
        padding: 200px 0;
        background: linear-gradient(90deg, {{settings.cart_heading_left_bg_color}} 50%, {{settings.cart_heading_right_bg_color}} 50%);
        margin: 0;
    }
    .cart__form {
        margin: 25px 0 50px;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: flex-end;
    }
    .cart__th,
    .cart__td {
        width: 20%;
    }
