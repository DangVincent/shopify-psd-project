{% comment %} Collections Page Styles Starts Here {% endcomment %}
.all-products {
    .all-products__heading {
        text-align: center;
        text-transform: uppercase;
        width: 100%;
        padding: 200px 0;
        background: linear-gradient(90deg, {{settings.collection_heading_left_bg_color}} 50%, {{settings.collection_heading_right_bg_color}} 50%);
    }
    .all-products__contentContainer {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }
    .all-products__leftContainer {
        border-right: 2px solid #f4bd03;
        width: 20%;
        .all-products__colorList {
            display: flex;
            flex-wrap: wrap;
            justify-content: flex-start;
            padding: 0;
            margin-bottom: 0;
        }
        .all-products__colorItem {
            width: 50%;
            margin: 0 auto 10px;
        }
        .all-products__item.tag-yellow {
            margin-bottom: 0;
        }
        .all-products__subheading {
            text-transform: uppercase;
            margin-top: 0;
        }
    }
    .active a {
        color: {{settings.filter_active_link_color}};
    }
    .tag-black {
        &::before {
            content:"";
            width: 50px;
            height: 50px;
            display: block;
            background: #000;
            border-radius: 50%;
            margin-bottom: 5px;
        }
        a {
            &:hover {
                color: {{settings.filter_link_hover_color}};
            }
        }
    }
    .tag-blue {
        @extend .tag-black;
        &::before {
            background: #0000ff;
        }
        a {
            padding-left: 5px;
        }
    }
    .tag-pink {
        @extend .tag-black;
        &::before {
            background: #ffc0cb;
        }
        a {
            padding-left: 7px;
        }
    }
    .tag-purple {
        @extend .tag-black;
        &::before {
            background: #800080;
        }
    }
    .tag-red {
        @extend .tag-black;
        &::before {
            background: #ff0000;
        }
        a {
            padding-left: 9px;
        }
    }
    .tag-white {
        @extend .tag-black;
        &::before {
            background: #fff;
            border: 1px solid #000;
        }
        a {
            padding-left: 3px;
        }
    }
    .tag-yellow {
        @extend .tag-black;
        &::before {
            background: #ffff00;
        }
    }
    .all-products__rightContainer {
        width: 75%;
    }
    .all-products__sortContainer {
        display: flex;
    }
    .all-products__text {
        margin: 5px 10px 5px 0;
        text-transform: uppercase;
    }
    .sort-by {
        border: none;
        color: {{settings.sort_by_text_color}};
        background: {{settings.sort_by_bg_color}};
    }
    .all-products__productList {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-template-rows: auto;
        grid-gap: 2em;
        margin: 50px auto 0;
        p:nth-of-type(2) {
            color: {{settings.product_price_text_color}};
        }
    }
    .all-products__productItem {
        .all-products__link {
            text-align: center;
        }
        .all-products__image {
            display: block;
            width: 100%;
            height: 250px;
            margin-bottom: 15px;
        }
    }
    
    .all-products__pagination {
        margin: 50px auto;
        text-align: center;
    }
    .page,
    .next,
    .prev {
        padding: 10px 15px ;
        background: {{settings.pagination_bg_color}};
        a {
            color: {{settings.pagination_text_color}};
        }
    }
    .page.current {
        background: {{settings.pagination_current_bg_color}};
        color: {{settings.pagination_current_text_color}};
    }

}
